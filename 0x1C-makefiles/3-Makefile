CC = gcc
SRC = main.c school.c
OBJ=$(SRC:%.c=%.o)
NAME = school
RM = rm -f

%.o : %.c m.h
	$(CC) -c -o $@ $<

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY : clean oclean fclean re
clean :
	$(RM) $(wildcard *~) $(NAME)

oclean :
	$(RM) $(OBJ)

fclean :
	$(RM) $(wildcard *~) $(wildcard *.o) $(NAME)	

re : oclean all
